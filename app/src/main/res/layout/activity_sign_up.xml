<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".MainActivity" android:orientation="vertical" android:background="#202020" android:padding="20dp" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:fontFamily="@font/contrail_one" android:autofillHints="" android:textColor="@color/paste" android:textColorHint="@color/teal_700" android:hint="@string/full_name" android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" android:inputType="text" android:id="@+id/fullNameID"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:fontFamily="@font/contrail_one" android:autofillHints="" android:textColor="@color/paste" android:textColorHint="@color/teal_700" android:hint="@string/date_of_birth" android:inputType="date" android:id="@+id/dateOfBirthID"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:fontFamily="@font/contrail_one" android:autofillHints="" android:textColor="@color/paste" android:textColorHint="@color/teal_700" android:hint="@string/mobile_number" android:inputType="number" android:id="@+id/mobileID"/>


    -<RadioGroup android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/genderradioid" android:layout_marginBottom="10dp" android:layout_marginTop="10dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/contrail_one" android:textColor="@color/paste" android:textSize="20sp" android:layout_marginLeft="12dp" android:text="@string/gender"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/contrail_one" android:textColor="@color/paste" android:id="@+id/maleradioid" android:textSize="20sp" android:layout_marginLeft="10sp" android:text="Male" android:buttonTint="@color/paste"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/contrail_one" android:textColor="@color/paste" android:id="@+id/femaleradioid" android:textSize="20sp" android:layout_marginLeft="10dp" android:text="Female" android:buttonTint="@color/paste"/>

</RadioGroup>


    -<RadioGroup android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/usertyperadioid" android:layout_marginBottom="10dp" android:layout_marginTop="10dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/contrail_one" android:textColor="@color/paste" android:textSize="20sp" android:layout_marginLeft="12dp" android:text="User Type"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/contrail_one" android:textColor="@color/paste" android:id="@+id/userradioid" android:textSize="20sp" android:layout_marginLeft="10sp" android:text="User" android:buttonTint="@color/paste"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:fontFamily="@font/contrail_one" android:textColor="@color/paste" android:id="@+id/volunteerradioid" android:textSize="20sp" android:layout_marginLeft="10dp" android:text="Volunteer" android:buttonTint="@color/paste"/>

</RadioGroup>

    <com.google.android.material.textfield.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" android:focusableInTouchMode="true" android:focusable="true"/>

    <EditText android:padding="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:fontFamily="@font/contrail_one" android:autofillHints="" android:textColor="@color/paste" android:textColorHint="@color/teal_700" android:hint="@string/user_name" android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" android:inputType="text" android:id="@+id/userNameID"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:fontFamily="@font/contrail_one" android:autofillHints="" android:textColor="@color/paste" android:textColorHint="@color/teal_700" android:hint="@string/email" android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" android:inputType="textEmailAddress" android:id="@+id/signUpEmailEditTextID"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:fontFamily="@font/contrail_one" android:autofillHints="" android:textColor="@color/paste" android:textColorHint="@color/teal_700" android:hint="@string/confirm_password" android:inputType="textPassword" android:id="@+id/signUpPasswordEditTextID"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:fontFamily="@font/contrail_one" android:textColor="@color/black" android:id="@+id/SignUpButtonIID" android:layout_marginTop="20dp" android:text="@string/sign_up" style="@style/Base.Widget.AppCompat.Button.Colored" android:onClick="signUp" app:backgroundTint="@color/paste"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:fontFamily="@font/contrail_one" android:textColor="@color/black" android:id="@+id/SignInTextViewID2" android:layout_marginTop="20dp" android:text="@string/sign_in2" style="@style/Base.Widget.AppCompat.Button.Colored" android:onClick="openSignInActivity" app:backgroundTint="@color/paste"/>

    <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/progressBarid" android:layout_gravity="center" android:visibility="gone"/>

</LinearLayout>